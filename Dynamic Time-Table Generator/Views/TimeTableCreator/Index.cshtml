@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button type="button" class="btn btn-primary" data-bs-toggle="modal" onclick="OpenInitialInformation()">
    Add Time Table
</button>
<div id="dynamicTimeTable">
    <h1>No timetable found. Please add one using the "Add Time Table" button.</h1>
</div>
<div class="modal fade" id="AddInitalValues" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Basic Time Table Information Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="thisForm">
                    <legend>Enter Information</legend>

                    <div class="mb-3">
                        <label for="WrokingDays" class="form-label">Working Days</label>
                        <select id="WrokingDays" name="workingDays" class="form-select"></select>
                        <span class="text-danger" id="errorWorkingDays"></span>
                    </div>

                    <div class="mb-3">
                        <label for="noOfSubjectDayWise" class="form-label">Subjects per day</label>
                        <select id="noOfSubjectDayWise" name="noOfSubjectDayWise" class="form-select"></select>
                        <span class="text-danger" id="errorNoOfSubjectDayWise"></span>
                    </div>

                    <div class="mb-3">
                        <label for="disabledTextInput" id="subjectCount" class="form-label">Total Subjects</label>
                        <input type="number" id="totalSubjects" name="totalSubjects" class="form-control" placeholder="Enter total subjects">
                        <span class="text-danger" id="errorTotalSubjects"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="SaveInitialTableInformation()">Save changes</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="AssignHoursToSubjectForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Basic Time Table Information Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="thisForm2">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="SaveSubjectHours()">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/customscripts/addinitialtimetableinformation.js"></script>
}

